<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AboutMeApp.SkillsPage"
             Title="Skills">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout BackgroundColor="Gray" Padding="20" Spacing="40">
            <StackLayout BackgroundColor="Maroon" >
                <Label
                Margin="30"
                Text="About Michael Griffin"
                TextColor="White"
                HorizontalTextAlignment="Center"
                FontSize="30"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand" />
            </StackLayout>
             <Entry Placeholder="Enter Skill Here " x:Name="skillAdd" /> 
             <Button BackgroundColor="Black" Text="Add Skill" TextColor="White" Clicked="Button_Clicked" />
             <ListView x:Name ="skillsListView" BackgroundColor="Maroon"/>
                
            </StackLayout>
      </ScrollView>
    </ContentPage.Content>
</ContentPage>